@{
    ViewBag.Title = "Employee Management Portal";
}

<div class="jumbotron">
    <h1>Employee Management Portal</h1>
    <p class="lead">Welcome to the Employee Managent Portal built using Microsoft's ASP.NET.</p>
    @if (!Request.IsAuthenticated)
    {
        <p>Register to get started.</p>
    } 
</div>

<div class="row">
   
    @if (Request.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            <div class="text-center">
                <h2>Click here to view and activate all registered employee profiles.</h2>

                <p>@Html.ActionLink("View Profiles", "index", "employee", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-primary" })</p>
            </div>
        }
        else
        {
            <div class="col text-center">
                <h2>Click here to view your profile.</h2>

                <p>@Html.ActionLink("View Profile", "index", "employee", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-primary" })</p>
            </div>
        }

    }

    else
    {
        <div class="col text-center">
            <h2>Login</h2>
            <p>
                Are you already an activated employee? Click below to login.
            </p>
            <p>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-primary" }) </p>
        </div>
        <div class="col text-center">
            <h2>Are you a new employee? Click below to sign up.</h2>
            <p>Please, register to continue using this application.</p>
            <p>@Html.ActionLink("Register New Employee", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-primary" })</p>
        </div>
    }
       
</div>

